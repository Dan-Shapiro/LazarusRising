	<h2>Our Supporters</h2>
	<div class="supporters">
		<div class="supporter-item">
			<div class="supporter-logo">
				<%= image_tag 'bowery-mission.jpg', :class => 'supporter-image' %>
			</div>
		</div>
		<div class="supporter-item">
			<div class="supporter-logo">
				<%= image_tag 'salesforce.jpg', :class => 'supporter-image' %>
			</div>
		</div>
		<div class="supporter-item">
			<div class="supporter-logo">
				<%= image_tag 'pwc.jpg', :class => 'supporter-image' %>
			</div>
		</div>
		<div class="supporter-item">
			<div class="supporter-logo">
				<%= image_tag 'rescue-mission.jpg', :class => 'supporter-image' %>
			</div>
		</div>
		<div class="supporter-item">
			<div class="supporter-logo">
				<%= image_tag 'penji.jpg', :class => 'supporter-image' %>
			</div>
